{
  "name": "my-tomorrows-test",
  "version": "0.0.1",
  "scripts": {
    "format": "run-s format:*",
    "format:eslint": "ng lint --fix",
    "format:prettier": "prettier --write .",
    "format:style": "stylelint \"src/**/*.scss\" --fix",
    "lint": "run-s lint:*",
    "lint:eslint": "ng lint",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "ng": "ng",
    "prepare": "husky install",
    "release": "commit-and-tag-version",
    "start": "ng serve",
    "build": "ng build",
    "build:ci": "ng build --output-path docs --base-href /my-tomorrows-test/",
    "watch": "ng build --watch --configuration development",
    "test": "jest --verbose",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "marked": "^9.0.0",
    "rxjs": "~7.8.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.1",
    "@angular-eslint/builder": "16.1.2",
    "@angular-eslint/eslint-plugin": "16.1.2",
    "@angular-eslint/eslint-plugin-template": "16.1.2",
    "@angular-eslint/schematics": "16.1.2",
    "@angular-eslint/template-parser": "16.1.2",
    "@angular/cli": "~16.2.1",
    "@angular/compiler-cli": "^16.2.0",
    "@angular/localize": "^16.2.4",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/format": "^17.4.4",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/jest": "^29.5.4",
    "@types/marked": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "commit-and-tag-version": "^11.2.3",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^13.1.1",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "~5.1.3"
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/properties-alphabetical-order": true
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.(ts|js)": "eslint --cache --fix",
    "*.(s|css)": "stylelint --fix",
    "*.format:*": "prettier --write"
  },
  "commit-and-tag-version": {
    "scripts": {
      "postchangelog": "npm run format:prettier"
    }
  }
}
